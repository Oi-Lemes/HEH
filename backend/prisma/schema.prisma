// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  nome      String? // O campo 'nome' agora é opcional para não dar erro
  createdAt DateTime @default(now())
  progresso ProgressoAula[]

  // REMOVEMOS O CAMPO SENHA E ADICIONAMOS ESTES
  magicLinkToken        String?   @unique // Token para o link mágico
  magicLinkTokenExpires DateTime? // Data de expiração do token
}

model Modulo {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  aulas       Aula[]
}

model Aula {
  id                    Int             @id @default(autoincrement())
  title                 String
  modulo                Modulo          @relation(fields: [moduloId], references: [id])
  moduloId              Int
  usuariosQueConcluiram ProgressoAula[]
}

model ProgressoAula {
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  aula        Aula     @relation(fields: [aulaId], references: [id])
  aulaId      Int
  completedAt DateTime @default(now())

  @@id([userId, aulaId])
}