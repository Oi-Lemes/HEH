generator client {
  provider = "prisma-client-js"
}

// Mapa do nosso Banco de Dados

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique // Diz que cada email deve ser único
  senha     String
  createdAt DateTime @default(now()) // Guarda a data de criação automaticamente
}

datasource db {
  provider = "postgresql" // <-- MUDANÇA FEITA AQUI
  url      = env("DATABASE_URL")
}